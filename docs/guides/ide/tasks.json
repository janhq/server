        // ============================================================================
        // Service Start Commands (Native - uses .env)
        // ============================================================================
        {
            "label": "Start LLM API",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "./cmd/server"
            ],
            "options": {
                "cwd": "${workspaceFolder}/services/llm-api",
                "env": {
                    "DATABASE_URL": "postgres://jan_user:jan_password@localhost:5432/jan_llm_api?sslmode=disable",
                    "DB_DSN": "postgres://jan_user:jan_password@localhost:5432/jan_llm_api?sslmode=disable",
                    "KEYCLOAK_BASE_URL": "http://localhost:8085",
                    "JWKS_URL": "http://localhost:8085/realms/jan/protocol/openid-connect/certs",
                    "ISSUER": "http://localhost:8085/realms/jan",
                    "HTTP_PORT": "8080",
                    "LOG_LEVEL": "debug",
                    "LOG_FORMAT": "console",
                    "AUTO_MIGRATE": "true",
                    "OTEL_ENABLED": "false"
                }
            },
            "dependsOn": ["Start Hybrid Infrastructure"],
            "isBackground": true,
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": {
                "owner": "go",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting.*$",
                    "endsPattern": "^.*Server started.*$|^.*Listening on.*$"
                }
            }
        },
        {
            "label": "Start MCP Tools",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/services/mcp-tools",
                "env": {
                    "HTTP_PORT": "8091",
                    "VECTOR_STORE_URL": "http://localhost:3015",
                    "SEARXNG_URL": "http://localhost:8086",
                    "SANDBOXFUSION_URL": "http://localhost:3010",
                    "LOG_LEVEL": "debug",
                    "LOG_FORMAT": "console",
                    "OTEL_ENABLED": "false"
                }
            },
            "dependsOn": ["Start Hybrid MCP Infrastructure"],
            "isBackground": true,
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": {
                "owner": "go",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting.*$",
                    "endsPattern": "^.*Server started.*$|^.*Listening on.*$"
                }
            }
        },
        // ============================================================================
