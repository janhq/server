            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Build MCP Tools",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "bin/mcp-tools",
