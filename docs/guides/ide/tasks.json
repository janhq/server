{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Dev-Full Stack",
            "type": "shell",
            "command": "make",
            "args": ["dev-full"],
            "options": {"cwd": "${workspaceFolder}"},
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Stop Dev-Full Stack",
            "type": "shell",
            "command": "make",
            "args": ["dev-full-stop"],
            "options": {"cwd": "${workspaceFolder}"},
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Down Dev-Full Stack",
            "type": "shell",
            "command": "make",
            "args": ["dev-full-down"],
            "options": {"cwd": "${workspaceFolder}"},
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Start Full Stack",
            "type": "shell",
            "command": "make",
            "args": ["up-full"],
            "options": {"cwd": "${workspaceFolder}"},
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Stop All Services",
            "type": "shell",
            "command": "make",
            "args": ["down"],
            "options": {"cwd": "${workspaceFolder}"},
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Start Monitoring Stack",
            "type": "shell",
            "command": "make",
            "args": ["monitor-up"],
            "options": {"cwd": "${workspaceFolder}"},
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Stop Monitoring Stack",
            "type": "shell",
            "command": "make",
            "args": ["monitor-down"],
            "options": {"cwd": "${workspaceFolder}"},
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Monitor Logs",
            "type": "shell",
            "command": "make",
            "args": ["monitor-logs"],
            "options": {"cwd": "${workspaceFolder}"},
            "isBackground": true,
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Health Check All Services",
            "type": "shell",
            "command": "make",
            "args": ["health-check"],
            "options": {"cwd": "${workspaceFolder}"},
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "View Service Logs",
            "type": "shell",
            "command": "make",
            "args": ["logs"],
            "options": {"cwd": "${workspaceFolder}"},
            "isBackground": true,
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Run Integration Tests - Auth",
            "type": "shell",
            "command": "make",
            "args": ["test-auth"],
            "options": {"cwd": "${workspaceFolder}"},
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Run Integration Tests - Conversations",
            "type": "shell",
            "command": "make",
            "args": ["test-conversations"],
            "options": {"cwd": "${workspaceFolder}"},
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Run Integration Tests - MCP",
            "type": "shell",
            "command": "make",
            "args": ["test-mcp-integration"],
            "options": {"cwd": "${workspaceFolder}"},
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Generate Swagger Docs",
            "type": "shell",
            "command": "make",
            "args": ["swagger"],
            "options": {"cwd": "${workspaceFolder}"},
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Database Console",
            "type": "shell",
            "command": "docker",
            "args": [
                "compose",
                "exec",
                "api-db",
                "psql",
                "-U",
                "jan_user",
                "-d",
                "jan_llm_api"
            ],
            "options": {"cwd": "${workspaceFolder}"},
            "group": "test",
            "problemMatcher": []
        }
    ]
}
