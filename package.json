{
  "name": "jan",
  "version": "0.1.0",
  "private": true,
  "description": "Jan Platform - AI-powered microservices with web interfaces",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "**/apps/platform",
      "**/apps/web",
      "**/packages/interfaces"
    ]
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:web": "npm run dev --workspace=@janhq/web",
    "dev:platform": "npm run dev --workspace=@janhq/platform",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "backend:up": "make up-full",
    "backend:down": "make down",
    "backend:setup": "make setup",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.46.4",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "resolutions": {
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
