  "item": [
    {
      "name": "Admin MCP Tools",
      "item": [
        {
          "name": "List All MCP Tools",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has data array', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('data');",
                  "    pm.expect(jsonData.data).to.be.an('array');",
                  "});",
                  "",
                  "pm.test('Tools have required fields', function () {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.data.length > 0) {",
                  "        const tool = jsonData.data[0];",
                  "        pm.expect(tool).to.have.property('public_id');",
                  "        pm.expect(tool).to.have.property('tool_key');",
                  "        pm.expect(tool).to.have.property('name');",
                  "        pm.expect(tool).to.have.property('description');",
                  "        pm.expect(tool).to.have.property('is_active');",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/llm/v1/admin/mcp-tools",
              "host": ["{{base_url}}"],
              "path": ["llm", "v1", "admin", "mcp-tools"]
            }
          },
          "response": []
        },
        {
          "name": "List MCP Tools - Filter by Category",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('All tools are in search category', function () {",
                  "    const jsonData = pm.response.json();",
                  "    jsonData.data.forEach(function(tool) {",
                  "        pm.expect(tool.category).to.equal('search');",
                  "    });",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/llm/v1/admin/mcp-tools?category=search",
              "host": ["{{base_url}}"],
              "path": ["llm", "v1", "admin", "mcp-tools"],
              "query": [
                {
                  "key": "category",
                  "value": "search"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "List MCP Tools - Filter by Active Status",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
