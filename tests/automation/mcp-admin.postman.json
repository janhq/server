        {
          "name": "Update MCP Tool - Add Disallowed Keywords",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Disallowed keywords are updated', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.disallowed_keywords).to.be.an('array');",
                  "    pm.expect(jsonData.disallowed_keywords).to.include('(?i)menlo');",
                  "    pm.expect(jsonData.disallowed_keywords).to.include('(?i)spam');",
                  "});"
                ],
