                  "});",
                  "",
                  "pm.test('All tools are active', function () {",
                  "    const jsonData = pm.response.json();",
                  "    jsonData.data.forEach(function(tool) {",
                  "        pm.expect(tool.is_active).to.equal(true);",
                  "    });",
