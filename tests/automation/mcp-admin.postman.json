                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/llm/v1/admin/mcp-tools?is_active=true",
              "host": ["{{base_url}}"],
              "path": ["llm", "v1", "admin", "mcp-tools"],
              "query": [
                {
                  "key": "is_active",
                  "value": "true"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get MCP Tool by ID",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has correct tool', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.public_id).to.equal(pm.collectionVariables.get('mcp_tool_id'));",
                  "});",
                  "",
                  "pm.test('Tool has all required fields', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('tool_key');",
                  "    pm.expect(jsonData).to.have.property('name');",
                  "    pm.expect(jsonData).to.have.property('description');",
                  "    pm.expect(jsonData).to.have.property('category');",
                  "    pm.expect(jsonData).to.have.property('is_active');",
                  "    pm.expect(jsonData).to.have.property('disallowed_keywords');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
